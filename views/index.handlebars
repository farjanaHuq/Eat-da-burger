<div class = "container">
  <div class="row">
      <div class="col-md-6">
          <ul>
          {{#each burgers}}
              {{#unless devoured}}
                <li>
                  <p>
                    {{this.burger_name}}
                    <button data-burgerid="{{this.id}}" class="devourIt">Devour It</button> 
                    </p>
                </li>  
             {{/unless}}
          {{/each}}
          </ul> 
          <h2>Enter your burger</h2>
          <form id = "eatBurger" class="button-size">
            <textarea type="text" name="burgerName"></textarea>
            <button type="submit">Submit</button> 
            <p>Enter your choice of burger, then click the 'Submit' button</p>
          </form> 
    </div>

    <div class="col-md-6">
        <div class="card main-panel">
            <div class="card-header">
               <h2>Eaten Burgers</h2>
            </div>
            <div class="card-body" id="eaten-burgers-body">
               {{#each burgers}}
                  {{#if devoured}}
                    <div class="card burger-card">
                        <div class="card-header">
                          <span>{{this.burger_name}}</span>
                        </div>
                        <div class="card-body">
                          <button class="discardIt-btn btn btn-primary" data-id="{{this.id}}">Discard trash</button>
                        </div>
                    </div>
                  {{/if}}
               {{/each}}
            </div>
         </div>
      </div>
  </div>

</div>


